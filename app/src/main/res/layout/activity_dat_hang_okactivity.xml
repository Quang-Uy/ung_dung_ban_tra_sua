<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thankyou1"
    tools:context=".Fragment.KhachHang.DatHangOKActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="57dp"
            app:srcCompat="@drawable/thankyou"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Chúc mừng bạn đặt hàng thành công. Xin vui lòng đợi dịch vụ trong giây lát."
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FCFFE7"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="493dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Gong Cha xin cảm ơn bạn đã tin dùng dịch vụ."
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FCFFE7"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="493dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_datHangOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="133dp"
            android:text="Tiếp tục mua hàng"
            android:backgroundTint="#FCFFE7"
            android:textColor="#C21010"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>